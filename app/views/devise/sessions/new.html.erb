<% provide(:title, t('fishing_memories.devise.sign_in.title')) %>

<%= semantic_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.inputs do %>
    <%=f.input :login, label: t('fishing_memories.devise.login.title'), required: true %>
    <%=f.input :password, label: t('fishing_memories.devise.password.title')%>

    <%=f.input :remember_me, label: t('fishing_memories.devise.sign_in.remember_me'), as: :boolean if devise_mapping.rememberable? %>
  <% end %>

  <%= f.actions do %>
    <%=f.action :submit, label: t('fishing_memories.devise.sign_in.submit'), button_html: { value: t('fishing_memories.devise.sign_in.submit') } %>
  <% end%>
<% end %>

<%= render "devise/shared/links" %>

