<% provide(:title, t('devise.resend_confirmation_instructions.title')) %>

<%= semantic_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.inputs do %>
    <%=f.input :email, label: t('devise.email.title')%>
  <% end %>

  <%= f.actions do %>
    <%=f.action :submit, label: t('devise.resend_confirmation_instructions.submit'), button_html: { value: t('devise.resend_confirmation_instructions.submit') } %>
  <% end%>
<% end %>

<%= render "devise/shared/links" %>
