<%= semantic_form_for(@resource) do |f| %>

  <% if resource_with_only_name_field? %>
    <%= (render 'layouts/resources/resource_form_with_name_field', f: f) %>
  <% else %>
    <%= render 'form_fields', f: f %>
  <% end %>
	
	<%= f.actions do %>
		<li class="action">
    	<%= f.submit %>
    <li>
    <li class="cancel">
      <%= link_to t('fishing_memories.back'), :back %>
    <li>
  <% end %>

<% end %>