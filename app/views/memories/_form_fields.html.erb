<%=f.inputs do %>

	<%=f.input :occured_at, :as => :date_picker, :input_html => { :value => (f.object.occured_at.try(:strftime,'%d.%m.%Y'))} %>

	<%=f.input :weather %>

	<%=f.input :ponds, as: :select,
	 collection: @ponds_options, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.pond_name') }} %>

	<%= f.input :places, as: :select, 
	:collection => @places_options, 
	input_html: { class: 'select2',data: { placeholder: t('js.placeholders.place_name') }} %>

	<%=f.input :pond_state %>

	<%=f.input :tackles, as: :select,
	 collection: @tackles_options, input_html: { class: 'select2', data: { placeholder: t('js.placeholders.tackle_name') }} %>

	<%= f.input :description, :as => :ckeditor, :input_html => {:ckeditor => { :height => 450 } } %>

	<%= f.input :conclusion, :as => :ckeditor, :input_html => {:ckeditor => { :height => 130 } } %>

<%end%>