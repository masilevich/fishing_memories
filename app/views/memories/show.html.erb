<% content_for :show_content do %>
  <%= render layout: 'layouts/resources/show_table' do %>
  		<tr class="row">
        <th><%= Memory.human_attribute_name("occured_at") %></th>
        <td><%= @resource.occured_at %></td>
      </tr>
      <tr class="row">
        <th><%= Memory.human_attribute_name("tackles") %></th>
        <td><%= pluck_and_join(@resource.tackles, :name) %></td>
      </tr>
      <tr class="row">
        <th><%= Memory.human_attribute_name("ponds") %></th>
        <td><%= pluck_and_join(@resource.ponds, :name) %></td>
      </tr>		
  <% end %>

  <%= render layout: 'layouts/resources/show_table', locals: {title: Memory.human_attribute_name("description")} do %>
      <tr class="row">
        <%= raw(@resource.description) %>
      </tr>     
  <% end %>

<% end %>