<%= semantic_form_for @point, remote: true do |f| %>

  <%=f.inputs do %>
    <%=f.input :name %>
    <%=f.input :description, as: :text, input_html: { rows: 3, cols: 25} %>
    <%=f.input :latitude, as: :hidden %>
    <%=f.input :longitude, as: :hidden %>
    <%=f.input :map_id, as: :hidden %>
  <%end%>
  
  <%= f.actions do %>
    <%= f.submit %>
  <% end %>
  
<% end %>